<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:tag="@string/app_name"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="5dp"
    >

    <TextView
        android:id="@+id/model_resourcesList_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="Une tÃ¢che"
        android:ellipsize="end"
        android:singleLine="true"
        android:textStyle="bold"
        android:paddingTop="10dp"
        android:paddingLeft="5dp"
        android:paddingRight="160dp"
        android:paddingBottom="10dp"
        android:textColor="@android:color/black"/>

    <TextView
        android:id="@+id/model_taskList_description"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:text="My first application"
        android:singleLine="true"
        android:layout_below="@+id/model_resourcesList_name"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:paddingLeft="5dp"
        android:paddingRight="160dp"
        android:maxLines="3"
        android:textColor="@android:color/black"
        android:paddingBottom="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="23 Nov. 2014"
        android:id="@+id/model_taskList_date"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/model_resourcesList_name"
        android:layout_alignEnd="@+id/model_resourcesList_name"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:textColor="#003366"
        android:textSize="12sp"
        android:paddingTop="5dp"
        android:paddingRight="0dp"
        android:paddingBottom="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Projet : Vertigo"
        android:id="@+id/model_taskList_project"
        android:layout_below="@+id/model_taskList_date"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="10dp"
        android:paddingTop="5dp"
        android:paddingRight="0dp"
        android:paddingBottom="5dp"
        android:textColor="@color/darkgrey"
        android:textSize="12sp"/>

</RelativeLayout>

